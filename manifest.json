{
  "name": "PerfPro Converter",
  "short_name": "PerfPro",
  "description": "Convert .3dp cycling workout files to TCX format",
  "start_url": ".",
  "display": "standalone",
  "background_color": "#0f1117",
  "theme_color": "#0f1117",
  "icons": [
    { "src": "icon.svg", "sizes": "any", "type": "image/svg+xml" },
    { "src": "icon-192.png", "sizes": "192x192", "type": "image/png" }
  ],
  "share_target": {
    "action": "share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "file",
          "accept": [".3dp", ".zip", "application/zip", "application/octet-stream"]
        }
      ]
    }
  }
}
